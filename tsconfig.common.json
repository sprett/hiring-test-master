{
    "compilerOptions": {
      "allowJs": true,
      "target": "ESNext",
      "esModuleInterop": true,
      "noEmitOnError": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "src/*": ["src/*"],
        "store/*": ["src/client/store/*"],
        "server/*": ["src/server/*"],
        "client/*": ["src/client/*"]
      },
      "resolveJsonModule": true,
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "types": ["vitest/globals"]
    },
    "include": ["src"]
  }
  